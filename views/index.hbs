<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - Home Page</title>
    <link rel="stylesheet" href= "/style/index.css">
    <link rel = "icon" href = "images/homepage.jpg" type = "image/x-icon"> 
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>

<div id="login-box">
  <div class="left">
    <h1 id="signin">Sign in</h1>

    <form action="homepage" method="POST">
        <input type="text" name="username" placeholder="Username" required />
        <input type="password" name="password" placeholder="Password" required />
        <button class="login" type="submit" name="login">Login</button>
    </form>
    
    <p id="forgot">Forgot your password? <u id = "click" onclick="openform()">Click here.</u></p>

    <div id="line"></div>
  </div>
  <div style="cursor: default; pointer-events: none;">
  <h1 style="position:absolute; margin-top:340px; font-size:12px; margin-left:110px; color:rgb(133, 133, 133)">Cooporate with</h1>
    <img id="mongo" src="images/mongodb.png">
    <img id="heroku" src="images/heroku.jpg">
    <img id="github" src="images/github.jpeg">
    <img id="vscode" src="images/vscode.png">
  </div>
</div>

<div id="popup-background">
<div class="w3-container w3-center w3-animate-top" id= "popup-container">
  <form id="form" action="/" method="POST">
    <h1 id="X" onclick="closeform()">X</h1>
    <h1 class="forgot-form">Forgot password?</h1>
    <label class="label"><b>Enter your username: </b></label><BR><BR>
    <input class="forgot-input" style="margin-top: -10px;" type="text" placeholder="Username" name="username" required><BR><BR>
    <label class="label"><b>Your phone number: </b></label><BR><BR>
    <input class="forgot-input" style="margin-top: -10px;" type="text" placeholder="09xx" name="phone" required><BR><BR>
    <button id="forgot-button" type="submit" id="login" onclick="noti()">Confirm</button><BR><BR>   
  </form>
</div>
</div>

<script>

function noti()
{
  alert("Sent!");
}

function openform() {
  document.getElementById("popup-background").style.display = "block";
}

function closeform() {
  document.getElementById("popup-background").style.display = "none";
}

</script>

</body>
</html>